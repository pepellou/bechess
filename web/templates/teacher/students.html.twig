{% extends 'base.html.twig' %}

{% block title %} Teacher dashboard {% endblock %}

{% block stylesheets %}
    <link href="{{ asset('build/css/teacher.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="section">
        <div class="container">
            <div class="row">

                <p>
                    Here are the registered students:
                    <ul>
                        {% for student in students %}
                            <li> <a href="{{ url('app_teacher_student', {'nickname':student.nickname}) }}"> {{ student.firstName }} {{ student.lastName }} </a> </li>
                        {% endfor %}
                    </ul>
                </p>

            </div>
        </div>
    </div>
{% endblock %}
